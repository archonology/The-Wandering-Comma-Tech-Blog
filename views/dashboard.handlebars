//render the dashboard
<div class="Dashboard d-flex justify-content-center p-2 flex-grow-1">
    <div class="d-flex justify-content-end p-2">
        <!-- keep track of new post link -->
        <a href="/newPost" class="form-inline">
            <button class="btn btn-outline-success" type="button">
                Create New Post
            </button>
        </a>
    </div>
    <div class="each-post">
        {{#each blogs as |blog|}}
        <a href="/posts/{{id}}">
            <h2>{{blog.title}}</h2>
            <p><em>{{blog.date_created}}</em></p>
        </a>
        <p>{{blog.post}}</p>
        {{/each}}
    </div>
</div>